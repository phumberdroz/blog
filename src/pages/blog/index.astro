---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { PROFILE, SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="blog-index">
			<section class="intro">
				<span class="tag">Writing</span>
				<h1>Notes, essays, and field reports.</h1>
				<p>
					I publish practical playbooks, product thinking, and the occasional
					behind-the-scenes story. Subscribe via RSS or share with a teammate.
				</p>
				<p class="intro-meta">Curated by {PROFILE.name}.</p>
			</section>
			<section class="post-list">
				{posts.map((post) => (
					<article class="post-card">
						<a href={`/blog/${post.id}/`}>
							<div class="post-header">
								<p class="post-date"><FormattedDate date={post.data.pubDate} /></p>
								<h2>{post.data.title}</h2>
							</div>
							<p>{post.data.description}</p>
						</a>
					</article>
				))}
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.blog-index {
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
	}

	.intro {
		max-width: 680px;
	}

	.intro-meta {
		font-size: 0.95rem;
		color: var(--muted);
	}

	.post-list {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 1.6rem;
	}

	.post-card {
		background: var(--surface);
		border-radius: var(--radius);
		padding: 2rem;
		border: 1px solid var(--border);
		box-shadow: var(--shadow);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.post-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow);
	}

	.post-header {
		margin-bottom: 0.6rem;
	}

	.post-date {
		margin: 0;
		font-size: 0.85rem;
		color: var(--muted);
		text-transform: uppercase;
		letter-spacing: 0.08em;
	}

	@media (max-width: 860px) {
		.post-list {
			grid-template-columns: 1fr;
		}
	}
</style>
